<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.simple.javafxapp.IntegerToRomanController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="outputText" alignment="CENTER" layoutX="104.0" layoutY="49.0" styleClass="UIlabel" text="Integer to Roman Numerals" textAlignment="CENTER" wrapText="true">
        <font>
          <Font size="25.0" />
        </font>
    </Label>
   <TextField fx:id="inputBox" promptText="Enter an integer" />
   <Button mnemonicParsing="false" onMouseClicked="#onIntegerToRomanButtonClick" styleClass="UIbutton" text="Button" />
</VBox>
